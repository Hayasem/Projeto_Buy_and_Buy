<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".backendactivitys.MenuScreen">

    <!-- Barra de Pesquisa -->
    <FrameLayout
        android:id="@+id/search_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/searchbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Campo de Pesquisa -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesquisar"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:paddingEnd="50dp"
            android:textColor="@color/black" />

        <!-- Ícone da Lupa com Fundo Amarelo -->
        <FrameLayout
            android:id="@+id/search_icon_container"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:background="@drawable/yellow_search_background">

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search_icon"
                android:contentDescription="Botão de busca"
                android:layout_gravity="center" />
        </FrameLayout>
    </FrameLayout>

    <!-- Barra de Navegação Superior -->
    <HorizontalScrollView
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Itens da Navegação -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Início"
                android:textSize="18sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perto de mim"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="infantil"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casual"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feminina"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculina"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Férias"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textSize="18sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Lista de Produtos -->
    <GridView
        android:id="@+id/gridView_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="2"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_navigation" />
</androidx.constraintlayout.widget.ConstraintLayout>
