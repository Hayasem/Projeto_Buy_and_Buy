<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MenuScreen">



    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_search"
            style="@style/button"
            android:text=""
            android:drawableTop="@drawable/lupa_icon"
            android:drawablePadding="-24dp"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="14dp"
            android:padding="14dp"
            android:clickable="true"
            app:layout_constraintTop_toTopOf="@id/search_bar"
            app:layout_constraintEnd_toEndOf="@id/search_bar"
            app:layout_constraintBottom_toBottomOf="@id/search_bar"
    />


    <TextView
            android:id="@+id/tv_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:layout_marginTop="20dp"
            android:textSize="36dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_bar"

    />

    <View
            android:id="@+id/container1"
            style="@style/Container_products"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_inicio"

    />

    <View
            android:id="@+id/container2"
            style="@style/Container_products"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container1"


    />

    <View
            android:id="@+id/container3"
            style="@style/Container_products"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container2"


    />

    <View
            android:id="@+id/container4"
            style="@style/Container_products"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container3"
    />

    <View
            android:id="@+id/container_iconstop"
            style="@style/Container_Icons"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/container_icons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <EditText
            android:id="@+id/search_bar"
            style="@style/edit_search_bar"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:hint="Pesquisar"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <ImageView
            android:id="@+id/img_item1"
            style="@style/ImgProduct"
            android:src="@drawable/img_backpack"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="@+id/container1"
            app:layout_constraintTop_toTopOf="@+id/container1"
            app:layout_constraintBottom_toBottomOf="@+id/container1"
    />

    <TextView
            android:id="@+id/nameItem1"
            style="@style/StringsMenu"
            android:text="Mochila Militar"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/img_item1"
            app:layout_constraintTop_toTopOf="@+id/container1"
    />

    <TextView
            android:id="@+id/priceItem1"
            style="@style/StringsMenu"
            android:text="R$ 149,99"
            android:textSize="28dp"
            app:layout_constraintStart_toEndOf="@+id/img_item1"
            app:layout_constraintBottom_toBottomOf="@+id/container1"
            app:layout_constraintTop_toBottomOf="@+id/nameItem1"
    />


    <ImageView
            android:id="@+id/img_item2"
            style="@style/ImgProduct"
            android:src="@drawable/img_racket"
            app:layout_constraintStart_toStartOf="@+id/container2"
            app:layout_constraintTop_toTopOf="@+id/container2"
            app:layout_constraintBottom_toBottomOf="@+id/container2"
    />

    <TextView
            android:id="@+id/nameItem2"
            style="@style/StringsMenu"
            android:text="Raquete alta tensão"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/img_item2"
            app:layout_constraintTop_toTopOf="@+id/container2"
    />

    <TextView
            android:id="@+id/priceItem2"
            style="@style/StringsMenu"
            android:text="R$ 280,00"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/container2"
            app:layout_constraintTop_toBottomOf="@+id/nameItem2"
            app:layout_constraintStart_toEndOf="@+id/img_item2"
    />
    <ImageView
            style="@style/ImgProduct"
            android:id="@+id/img_item3"
            app:layout_constraintBottom_toBottomOf="@+id/container3"
            app:layout_constraintTop_toTopOf="@+id/container3"
            app:layout_constraintStart_toStartOf="@+id/container3"
            android:paddingStart="10dp"
            android:src="@drawable/img_sneakers"
    />

    <TextView
            android:id="@+id/nameItem3"
            style="@style/StringsMenu"
            android:textSize="24dp"
            android:text="Tênis Yonex"
            app:layout_constraintStart_toEndOf="@+id/img_item3"
            app:layout_constraintTop_toTopOf="@+id/container3"
    />

    <TextView
            android:id="@+id/priceItem3"
            style="@style/StringsMenu"
            android:text="R$ 388,00"
            android:textSize="28dp"
            app:layout_constraintTop_toBottomOf="@+id/nameItem3"
            app:layout_constraintStart_toEndOf="@+id/img_item3"
            app:layout_constraintBottom_toBottomOf="@+id/container3"
    />

    <ImageView
            android:id="@+id/img_item4"
            style="@style/ImgProduct"
            android:src="@drawable/img_headset"
            app:layout_constraintStart_toStartOf="@+id/container4"
            app:layout_constraintBottom_toBottomOf="@+id/container4"
            app:layout_constraintTop_toTopOf="@+id/container4"
            android:padding="5dp"
    />

    <TextView
            android:id="@+id/nameItem4"
            style="@style/StringsMenu"
            android:text="Headset logitech"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="@+id/container4"
            app:layout_constraintStart_toEndOf="@+id/img_item4"
    />

    <TextView
            android:id="@+id/priceItem4"
            style="@style/StringsMenu"
            android:text="R$ 490,50"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/container4"
            app:layout_constraintTop_toBottomOf="@+id/nameItem4"
            app:layout_constraintStart_toEndOf="@+id/img_item4"
    />

    <View
            android:id="@+id/container_icons"
            style="@style/Container_Icons"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/container_icons"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <ImageButton
            android:id="@+id/bt_home"
            style="@style/ClickableIcons"
            android:background="@drawable/img_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_notification"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_icons"
    />

    <ImageButton
            android:id="@+id/bt_notification"
            style="@style/ClickableIcons"
            android:background="@drawable/notification_icon"
            app:layout_constraintStart_toEndOf="@id/bt_home"
            app:layout_constraintEnd_toStartOf="@+id/bt_shoppingCart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_icons"
    />

    <ImageButton
            android:id="@+id/bt_shoppingCart"
            style="@style/ClickableIcons"
            android:background="@drawable/img_kart"
            app:layout_constraintStart_toEndOf="@+id/bt_notification"
            app:layout_constraintEnd_toStartOf="@+id/bt_perfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_icons"
    />

    <ImageButton
            android:id="@+id/bt_perfil"
            style="@style/ClickableIcons"
            android:background="@drawable/img_user"
            app:layout_constraintStart_toEndOf="@+id/bt_shoppingCart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/container_icons"
    />








</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
