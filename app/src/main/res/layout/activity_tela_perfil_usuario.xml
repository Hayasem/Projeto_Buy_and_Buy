<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/telaPerfilUsuarioId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".backendactivitys.TelaPerfilUsuario">


        <View
            android:id="@+id/containerUser"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="26dp"

            android:layout_marginEnd="131dp"
            android:background="@drawable/container_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_meus_produtos" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/user"
            app:layout_constraintEnd_toStartOf="@+id/containerUser"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#878787" />

        <ImageView
            android:id="@+id/iconeuser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="124dp"


            android:layout_marginEnd="50dp"
            android:src="@drawable/user"
            app:layout_constraintEnd_toStartOf="@+id/imgbtn_products"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/text_nome_usuario"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginTop="17dp"

            android:layout_marginEnd="166dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerUser" />

        <ImageView
            android:id="@+id/IconeEmail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="98dp"
            android:src="@drawable/ic_email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/containerUser" />

        <TextView
            android:id="@+id/text_email_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="296dp"
            android:layout_marginEnd="128dp"
            android:text=""

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgbtn_products"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="99dp"
            android:layout_marginEnd="33dp"
            android:clickable="true"
            android:src="@drawable/meus_produtos"
            app:layout_constraintEnd_toStartOf="@+id/IconeEmail"
            app:layout_constraintTop_toBottomOf="@+id/containerUser" />

        <TextView
            android:id="@+id/txt_meus_produtos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="108dp"
            android:text="Cadastrar produtos"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/bt_deslogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="@color/black"
            android:padding="20dp"
            android:text="Sair da conta"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconeuser" />


</androidx.constraintlayout.widget.ConstraintLayout>