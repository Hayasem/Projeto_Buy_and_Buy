<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="418dp"
            android:layout_height="67dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/cinza_claro" android:layout_margin="10dp" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.666" android:paddingStart="10sp">
        <TextView
                android:text="titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/idTitulo"
                android:textSize="16sp" android:textStyle="bold" android:paddingStart="40dp" android:paddingTop="5sp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/idSubtitulo"
                android:text="subtitulo" android:paddingStart="40dp" android:paddingTop="5sp"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>